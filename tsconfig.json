{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "target": "es6",
    "module": "es6",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "esModuleInterop": true
  },
  // "files": ["src/index.ts"],
  "include": ["src"],
  "exclude": ["node_modules", "src/types.ts", "src/__tests__", "dist"]
}
